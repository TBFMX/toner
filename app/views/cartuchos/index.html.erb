<div class="cintilla_cartuchos">Cartuchos</div>
<h1>Listing cartuchos</h1>

<table>
<% @cartuchos.each do |cartucho| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(cartucho.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
       <dt><%= cartucho.title %></dt>
       <dd><%= truncate(strip_tags(cartucho.description), length: 80) %></dd>
       <dd><%= cartucho.price %></dd>
       <dd><%#= cartucho.brand %></dd>
       <dd><%#= cartucho.model %></dd>
       <dd><%#= cartucho.color %></dd>
      </dl>
    </td>
    <td class="list_actions">
     <%#= link_to 'Show', cartucho %><br/>
     <%#= link_to 'Edit', edit_cartucho_path(cartucho) %><br/>
     <%#= link_to 'Destroy', cartucho, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>



