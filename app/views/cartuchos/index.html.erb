
<div class="cintilla_cartuchos">Cartuchos</div>

<div class="filtrar_cartuchos">
  <%=form_tag seleccion_path do %>
    <%= label_tag "brand", 'Marca'%>
    <%=select_tag "brand", options_from_collection_for_select(@marcas, "brand", "brand"), {include_blank: true}%>
    <%#=select_tag "impresoras", options_from_collection_for_select(@impresoras, "brand" + "-" + " impresoras", "impresoras")%>
    <%#= label_tag "impresoras", 'impresoras'%>
    
    <%#= grouped_collection_select( @impresoras, :brand_model , Brand.order(:name), :printers, :name, :model, :model, {include_blank: true}) %>

    <%#=select_tag "impresoras", options_for_select(@options, :disabled => @marcas) , {include_blank: true}%>

    <%=submit_tag 'filtrar'%>
  <% end %>
  <p><%= button_to('Finalizar',presupuesto_path(),method: :get)%></p>
</div>

<div id="mensaje">
  <p>El cartucho ha sido agregado al carrito</p>
</div>

<table class="tabla_lista_articulos">
  <tr>
    <th>Marca</th>
    <th>Modelo</th>
    <th>Precio</th>
    <th>Cantidad</th>
    
    <th></th>
  </tr>
  <% @cartuchos.each do |cartucho| %>
    <tr>
      <td><%=cartucho.brand%></td>
      <td><%=cartucho.clave%></td>
      <td><%= cartucho.price %></td>
      <td colspan = '2'> <!-- line_items_path -->
      <%= form_tag(line_items_path, remote: true, :id=>"agregar_form") do %>
        <%= text_field_tag 'quantity'%>
        <%#= text_field_tag 'total' %> <!-- el id es 'total' -->  
        <%= hidden_field_tag 'cartucho_id', cartucho.id%>
        <%= submit_tag 'Agregar' %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate(@cartuchos) %>
